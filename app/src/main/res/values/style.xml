<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomNoActionBarTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/mainDark</item>
    </style>

    <style name="MyTitleStyle" >
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="MyTextStyle" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="MyBtnStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">50dp</item>
    </style>

    <style name="MyRadioBtnStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">50dp</item>
    </style>

    <style name="MySpinnerStyle">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="MyCheckBoxStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>